{% comment %}
{% paginate blog.articles by 5 %}

<h1>{{ blog.title }}</h1>
{% for article in blog.articles %}
<div>
  <h2><a href="{{ article.url }}">{{ article.title }}</a></h2>
  {{ article.author }} @ {{ article.created_at }}
  <div>
    {% if article.excerpt.size > 0 %}
    {{ article.excerpt }}
    {% else %}
    <p>{{ article.content | strip_html | truncatewords: 100 }}</p>
    {% endif %}
  </div>
</div>
{% endfor %}

{% if paginate.pages > 1 %}
{{ paginate | default_pagination }}
{% endif %}

{% endpaginate %}
{% endcomment %}


<section class="inner_page_head">
  <div class="container_fuild">
    <div class="row">
      <div class="col-md-12">
        <div class="full">
          <h3>All Blog</h3>
        </div>
      </div>
    </div>
  </div>
</section>

<div class="blog-template my-5">

  <div class="container">

    <div class="row">

      {% for article in blog.articles %}
      <div class="col-md-4">
        <a href="{{ article.url }}">
          <img style="max-width:100%" src="{{ article.image | img_url:'large'}}">
        </a>
        <h5 class="mt-4 mb-3">{{ article.title }}</h5>
        <p>{{ article.content | truncate:86 }}</p>

        <a href="{{ article.url }}" class="btn btn-danger">Read More</a>

      </div>

      {% endfor %}

    </div>


  </div>


</div>