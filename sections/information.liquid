<section class="why_section layout_padding">
   <div class="container">
      <div class="heading_container heading_center">
         <h2>
            {{ section.settings.heading }}
         </h2>
      </div>
      <div class="row">

         {% for block in section.blocks %}

         <div class="col-md-4">
            <div class="box ">
               <div class="img-box">
                  <img src="{{ block.settings.img | img_url:'80x80' }}">
               </div>
               <div class="detail-box">
                  <h5>
                     {{ block.settings.title }}
                  </h5>
                  <p>
                     {{ block.settings.short_para }}
                  </p>
               </div>
            </div>
         </div>

         {% endfor %}

      </div>
   </div>
</section>


{% schema %}
{
"name": "Information",
"blocks":[
{
"type":"text",
"name":"Information",
"settings":[
{
"type":"image_picker",
"id":"img",
"label":"Upload your icon"
},
{
"type":"text",
"id":"title",
"label":"Type your title"
},
{
"type":"textarea",
"id":"short_para",
"label":"Write your short paragraph"
}
]
}
],
"settings": [
{
"type":"header",
"content":"Information Section"
},
{
"type":"text",
"id":"heading",
"label":"Type your heading"
}

],
"presets":[
{
"name":"Informations",
"blocks":[
{
"type":"text"
}
]
}
]
}
{% endschema %}