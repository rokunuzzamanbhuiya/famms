<section class="product_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Our <span>products</span>
            </h2>
        </div>
        <div class="row">

            {% for product in section.settings.fp.products limit:9 %}

            <div class="col-sm-6 col-md-4 col-lg-4">
                <div class="box">
                    <div class="option_container">
                        <div class="options">
                            <a href="{{ product.url }}" class="option1">
                                Add To Cart
                            </a>
                            <a href="{{ product.url }}" class="option2">
                                Buy Now
                            </a>
                        </div>
                    </div>
                    <div class="img-box">
                        <img src="{{ product.featured_image | img_url:'large' }}" alt="">
                    </div>
                    <div class="detail-box align-items-center justify-content-center">
                        <h5>
                            {{ product.title | truncate: 24 }}
                        </h5>
                    </div>
                    <div class="detail-box align-items-center justify-content-center">
                        <h6>
                            {{ product.price | money }}
                        </h6>
                    </div>
                </div>
            </div>

            {% endfor %}

        </div>


        <div class="btn-box">
            <a href="/collections/all">
                View All products
            </a>
        </div>
    </div>
</section>


{% schema %}
{
"name": "Featured Product",
"settings": [
{
"type":"header",
"content":"Featured Product"
},
{
"type":"collection",
"id":"fp",
"label":"Select your collection"
}


],
"presets":[
{
"name":"Featured Product- New"
}
]
}
{% endschema %}